<html>
<head>
  <title>LearArea</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css" />
  <script type="text/javascript">
      $(document).ready(function(){
      $( "#contact-form" ).dialog({
          autoOpen: false,
          height: 300,
          width: 350,
          modal: true
      });
      $( "#contact-us" )
                 .click(function() {
                  $( "#contact-form" ).dialog( "open" );
              });
      });
  </script>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">LearnArea.com</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Home",{:controller=>"searching",:action=>"searching"} %></li>
          <li><%= link_to "Tutoring",{ :controller=>"searching",:action=>"tutoring"}, :target => "_blank",:remote=>true %></li>
          <li><%= link_to "Online",{ :controller=>"searching",:action=>"online"}, :target => "_blank",:remote=>true %></li>
          <li><%= link_to "Contact Us","#",:id=>"contact-us" %></li>

        </ul>
      </div>
      <div id="user_nav" style="float: right">
        <% if user_signed_in? %>
            Signed in as<b> <%= current_user.username %>  </b>
            <%= link_to "Sign Out",destroy_user_session_path,:method => :delete %>
        <% else %>
            <%= link_to "Sign Up",new_user_registration_path %> <span> | </span> <%= link_to "Sign In",new_user_session_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div>
  <%= yield %>
</div>
<div id="contact-form" title="contact-details">
  Damodara Building<br>
  1-3-183/40/12,<br>Gandhi Nagar,<br>RTC X Roads,<br>Hyderabad,<br>500080.<br>  +91-40-27532205
</div>
</body>
</html>