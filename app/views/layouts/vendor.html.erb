<html>
<head>
  <title>LearnArea</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css" />
  <style >
    p{
        text-align: center;
        padding-top: 10px;
    }
  </style>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">LearnArea.com</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Home" %></li>

          <li><%= link_to "Contact Us" %></li>

        </ul>
      </div>
      <div id="user_nav" style="float: right">
        <% if user_signed_in? %>
            Signed in as <b> <%= current_user.username %></b>
            <%= link_to "Sign Out",destroy_user_session_path,:method => :delete %>
        <% else %>
            <%= link_to "Sign Up",new_user_registration_path %> <span> | </span> <%= link_to "Sign In",new_user_session_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3" style="height:500px;box-shadow: 10px 10px 10px #1cacdc;background-color: #ccc;border-radius: 10px">
      <p><%= link_to :addOnlineCourse,vendor_onlinecourse_path,:remote=>true %></p><hr>
      <p><%= link_to :addTutoringCourse,vendor_tutoringcourse_path,:remote=>true %></p><hr>
      <p><%= link_to :addSeminor,vendor_seminor_path,:remote=>true %></p><hr>
      <p><%= link_to :addWorkShop,vendor_workshop_path,:remote=>true %></p><hr>
      <p><%= link_to :addInstitute,vendor_institute_path,:remote=>true %></p><hr>
      </div>
    <div class="span6" style="box-shadow: 10px 10px 10px 10px #1cacdc;background-color: #ccc">
      <%= yield %>

    </div>
    <div class="span3" style="height:500px;box-shadow: 10px 10px 10px #1cacdc;background-color: #ccc;border-radius: 10px">
      </div>
  </div>
</div>
</body>
</html>
